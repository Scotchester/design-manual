---
---

[{% for page in site.pages %}
  {
    "title":    "{{ page.title | escape }}",
    "category": "{{ page.categories | join: ' ' }}",
    "content":  {{ page.content | strip_html| newline_to_br | strip_newlines | replace: '<br />', ' ' | remove: "	" | jsonify }},
    "url":      "{{ site.github.url }}{{ page.url }}",
    "date":     "{{ page.date }}"
  }{% unless forloop.last %},{% endunless %}
{% endfor %}]
